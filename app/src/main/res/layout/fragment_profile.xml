<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">



        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/secondprimary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EmailTextProfileLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:endIconDrawable="@drawable/ic_pencil"
                app:endIconMode="custom"
                android:drawablePadding="8dp"
                app:endIconContentDescription="Description for icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/rounded_login_ui"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Nama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="24dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/namaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/secondprimary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namaTextProfileLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                app:endIconDrawable="@drawable/ic_pencil"
                app:endIconMode="custom"
                android:drawablePadding="8dp"
                app:endIconContentDescription="Description for icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/rounded_login_ui"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonupdateprofile"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Update"
                app:backgroundTint="@color/secondprimary"
                app:cornerRadius="10dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutbutton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="LogOut"
                app:backgroundTint="@color/secondprimary"
                app:cornerRadius="10dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deletebutton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Delete Account"
                app:backgroundTint="@color/secondprimary"
                app:cornerRadius="10dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
